

      <!-- Your banner code -->
      <div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1448518184296-a22facb4446f?ixlib=rb-0.3.5&q=80&fm=jpg&crop=entropy&w=1080&fit=max&s=5628d2e809c6bc15ffaf8d3ee2fd7f6e');">
        <div class="banner-content">
          <h1>WELCOME HOME</h1>
          <p>Rent unique places to stay from local hosts in 190+ countries.</p>
          <form action="#" class="form-inline">

            <div class="form-group">
              <input type="text" class="form-control input-lg" id="exampleCheckin" placeholder="checkin">
            </div>
            <div class="form-group">
              <input type="text" class="form-control input-lg" id="exampleCheckout" placeholder="checkout">
            </div>
            <select class="form-control input-lg">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
            <button type="submit" class="btn btn-primary btn-lg">Search</button>
          </form>
        </div>
      </div>

      <!-- Your features code -->
      <div class="container text-center padded features">
        <div class="row">

          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "globe.png" %>
            <h2>Discover the world</h2>
            <p>The earth is your new home</p>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "dollar.png" %>
            <h2>Pay online</h2>
            <p>No cash issues anymore</p>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "beer.png" %>
            <h2>Meet people</h2>
            <p>Discover new culture and lifestyle.</p>
          </div>

          <div class="col-xs-12 col-sm-6 col-md-3">
            <%= image_tag "heart.png" %>
            <h2>Share and love</h2>
            <p>Join a community you will love</p>
          </div>
        </div>
      </div>

      <!-- Your cards code -->
      <div class="wrapper-grey padded">
        <div class="container">
          <h2 class="text-center">Your next trip</h2>
          <div class="row">
            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-paris.jpg');">
                <div class="card-category">Paris</div>
                <div class="card-description">
                  <h2>Seb's Home</h2>
                  <p>Charming room with patio</p>
                </div>
                <%= image_tag "seb.jpg", class: "card-user avatar avatar-large" %>
                <%= link_to "", "#", class: "card-link" %>
              </div>
            </div>

            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-brussels.jpeg');">
                <div class="card-category">Brussels</div>
                <div class="card-description">
                  <h2>Anne's Home</h2>
                  <p>Lovely house</p>
                </div>
                <%=image_tag "anne.jpg", class: "card-user avatar avatar-large" %>
                <%= link_to "", "#", class: "card-link" %>
              </div>
            </div>

            <div class="col-xs-12 col-sm-4">
              <div class="card" style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('images/card-london.jpeg');">
                <div class="card-category">London</div>
                <div class="card-description">
                  <h2>Romain's Home</h2>
                  <p>Nice flat in Picadilly</p>
                </div>
                <%= image_tag "romain.jpeg", class: "card-user avatar avatar-large" %>
                <%= link_to "", "#", class: "card-link" %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Your newsletter code -->
      <div id="newsletter" class= "text-center padded">
        <h2>Get news from us</h2>
        <p>Leave us your email and get news from us</p>
        <form class="form-inline">
          <div class="form-group">
            <label class="sr-only" for="email">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="bob@gmail.com">
          </div>
          <button type="submit" class="btn btn-primary">Subscribe</button>
        </form>
      </div>

